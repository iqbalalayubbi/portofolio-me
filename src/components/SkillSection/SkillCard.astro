---
import Icon from "astro-iconify";
const { icon, text } = Astro.props;
---

<div
  class="text-text-light font-semibold flex flex-col justify-center gap-4 items-center bg-dark-component py-6 px-6 w-36 sm:w-40 md:w-32 lg:w-40 rounded-lg shadow-lg hover:bg-dark-mode transition-all duration-300 cursor-pointer"
>
  <Icon name={icon} class="w-8 sm:w-14 md:w-10" />
  <span class="text-center md:text-sm lg:text-lg">{text}</span>
</div>
