---
import TrainingCard from "./TrainingCard.astro";
import dicodingLogo from "../../assets/dicoding.jpg";
import bsaLogo from "../../assets/binary-studio-academy.png";

const trainings = [
  {
    title: "Belajar Membuat Front-End Web untuk Pemula",
    logo: dicodingLogo,
  },
  {
    title: "Belajar Membuat Aplikasi Back-End untuk Pemula",
    logo: dicodingLogo,
  },
  {
    title: "FullStack Javascript Developer",
    logo: bsaLogo,
  },
];
---

<main class="h-screen">
  <h1 class="title-section">Academics</h1>
  <div class="text-text-light mt-20">
    <h1 class="font-bold text-2xl mb-5 indent-10">Training</h1>
    <div class="grid grid-cols-3 gap-4 justify-items-center">
      <!-- list training cards -->
      {trainings.map((training) => <TrainingCard {...training} />)}
    </div>
    <h1 class="font-bold text-2xl mb-5 mt-10 indent-10">Study</h1>
    <div>
      <!-- list study cards -->
    </div>
  </div>
</main>
