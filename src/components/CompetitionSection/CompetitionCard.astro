---
import Icon from "astro-iconify";
const { icon, title, description } = Astro.props;
---

<main
  class="text-text-light flex flex-col items-center gap-1 sm:gap-4 bg-dark-component p-4 sm:p-6 rounded-lg w-full sm:w-3/4 md:w-full"
>
  <div class="flex flex-col items-center gap-4">
    <Icon name={icon} size="36" />
    <h1 class="text-base sm:text-xl md:text-lg font-semibold text-center">
      {title}
    </h1>
  </div>
  <hr />
  <p class="text-disable-text-dark text-center text-xs md:text-sm">
    {description}
  </p>
</main>
